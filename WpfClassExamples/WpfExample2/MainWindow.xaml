<Window x:Class="WpfExample2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfExample2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black"/>
                <GradientStop Color="#FFDE1818" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button Content="Click Me" HorizontalAlignment="Left" Margin="128,79,0,0" VerticalAlignment="Top" Width="155" Height="65" Click="Button_Click"/>
        <TextBox x:Name="txtFavoriteColor" HorizontalAlignment="Left" Margin="128,217,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="155" Height="71"/>

    </Grid>
</Window>
